{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "skipper",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "skipper": "./src/index.ts"
  },
  "scripts": {
    "cli": "bun run ./src/index.ts",
    "typecheck": "bun x tsc --noEmit",
    "lint": "bun run typecheck && bun run ./scripts/check-source-standards.ts",
    "test": "bun test",
    "build:lambda-artifact": "bun run ./scripts/generate-lambda-artifact.ts",
    "build": "bun run build:lambda-artifact && bun build ./src/index.ts --compile --outfile bin/skipper"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.1000.0",
    "@aws-sdk/client-ecs": "^3.1000.0",
    "@aws-sdk/client-s3": "^3.1000.0",
    "@aws-sdk/client-sts": "^3.1000.0",
    "@aws-sdk/client-cloudformation": "^3.888.0",
    "@octokit/webhooks": "^13.7.1",
    "@octokit/webhooks-types": "^7.6.1",
    "@pulumi/aws": "^7.20.0",
    "@pulumi/pulumi": "^3.120.0",
    "commander": "^14.0.3",
    "fflate": "^0.8.2"
  }
}
